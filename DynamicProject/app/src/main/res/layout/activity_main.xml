<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff44aaff">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Search By location"
        android:id="@+id/btnlocationsearch"
        android:enabled="true"
        android:clickable="true"
        android:layout_above="@+id/btntypesearch"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="#ffffffff"
        android:textStyle="bold|italic"
        android:textSize="15dp"
        android:textColor="#ff45aaff"
        android:elegantTextHeight="false" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Search By Type"
        android:id="@+id/btntypesearch"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnlocationsearch"
        android:layout_alignStart="@+id/btnlocationsearch"
        android:layout_marginBottom="63dp"
        android:layout_alignRight="@+id/btnlocationsearch"
        android:layout_alignEnd="@+id/btnlocationsearch"
        android:textStyle="bold|italic"
        android:textColor="#ff45aaff"
        android:background="#ffffffff"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DYNAMIC SENSORING"
        android:id="@+id/title"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp" />

</RelativeLayout>
